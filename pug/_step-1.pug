div(class="main-content py-3 step-1")
    div(class="container h-100 border border-dark content-container")
        div(class="row h-100")
            div(class="col-2")

            div(class="col")
                div(class="d-flex w-100 h-100 justify-content-center align-items-center")
                    form(class="w-75")
                        div(class="form-group")
                            label(class="d-block h4 spaceNeededRangeLabel")
                                | How many people:

                            input(class="form-control w-25 d-inline-block spaceNeededRangeInput", type="number", value="1")
                            input(class="form-control-range d-inline-block spaceNeededRangeSlider", type="range", value="1")
                        
                        div(class="form-group")
                            label(class="h4")
                                | Length of stay:
                                
                            input(class="form-control stayingRange")

                        button(type="submit", class="btn btn-primary float-right detailSubmit")
                            | Continue

            div(class="col-2")
                div(class="d-flex w-100 h-100 justify-content-center align-items-center")
                    i(class="fas fa-chevron-right fa-5x")
